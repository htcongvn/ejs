<%- include("partials/header"); %>
<h1><%= postTitle %></h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="postTitle" id="title" autocomplete="off">
    <label for="post">Post</label>
    <textarea class="form-control" name="postBody" id="post" rows="5"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="publish" value="<%= postTitle %>">Publish</button>
</form>
<%- include("partials/footer"); %>
